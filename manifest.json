{
  "name": "Custom Colours",
  "description": "Extension to change the styles of webpages",
  "version": "0.8",
  "manifest_version": 2,
  "permissions": ["storage"],
  "background":{
    "scripts": ["scripts/loadPreferences.js"],
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": [
        "file:///E:/Projects/CCC/Chrome-Custom-Colours/demo.html"
      ],
      "js": ["content.js"],
      "css":["styles/content.css"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": ["assets/*.svg", "data/*.json"]
}
